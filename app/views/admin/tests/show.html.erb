<%- model_class = Test -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  
  <dt><strong><%= model_class.human_attribute_name(:no_of_questions) %>:</strong></dt>
  <dd><%= @test.no_of_questions %></dd>
  <dt><strong><%= model_class.human_attribute_name(:duration) %>:</strong></dt>
  <dd><%= @test.duration.strftime("%H:%M:%S") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @test.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_mark) %>:</strong></dt>
  <dd><%= @test.total_mark %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @test.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_tests_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_admin_test_path(@test), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  admin_test_path(@test),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
<%= link_to t('.preview', :default => t("helpers.links.preview")),
              preview_admin_test_path, :class => 'btn btn-default' %>
              